#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <sys/wait.h>
#include <semaphore.h>
#include <pthread.h>
#include <fcntl.h> 

void main(int argc, char* argv[]) {
    sem_t sem1;
    sem_t sem2;
    sem_init(&sem1,0, 1);
    sem_init(&sem2,0, 0);

    if(fork()) {
        while(1==1){
                printf("1");
                sleep(1);
            sem_post(&sem2);
        }
    } else{
        while(1==1){ 
                printf("2");
                sleep(1);
            sem_post(&sem1);
        }      
    } 
}
